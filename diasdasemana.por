// Ler um número e escrever o nome do mês correspondente.
programa exercicio_16;
var mes: inteiro;
inicio
  escreva('Digite o número de 1 a 7: ');
  leia(mes);

  escolha mes de
    1: escreva('domingo');
    2: escreva('segunda');
    3: escreva('terça');
    4: escreva('quarta');
    5: escreva('quinta');
    6: escreva('sextq');
    7: escreva('sábado');
  senao
    escreva('Número inválido');
  fim;
fim.
